@model IEnumerable<Category>
<br />
<br />
<br />
<h1 style="color:rgb(79,49,204);font-weight:bold;" class="text-center">Categorys</h1>
<br />
<br />
<br />

<div class="d-flex justify-content-center">
    <a asp-controller="Categorys" asp-action="GetCreateView" class="btn btn-outline-secondary btn-lg mb-1"> Add New Category </a>
</div>
<br />

@if (Model.Count() > 0){
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th style="color:black;font-weight:bold">@Html.DisplayNameFor(e=>e.BookType)</th>
                <th style="color:black;font-weight:bold">@Html.DisplayNameFor(e=>e.Description)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model){
                <tr>
                    <td> @item.BookType</td>
                    <td> @item.Description</td>
                    <td>
                        <a asp-controller="Categorys" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="bi bi-card-list"></i></a>
                        <a asp-controller="Categorys" asp-action="GetEditView" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Categorys" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>}
        </tbody>
    </table>
}
else
{
    <br />
	<h2 style="color:darkred;font-weight:bold">There is no date.</h2>
}
<br />
<hr />

  